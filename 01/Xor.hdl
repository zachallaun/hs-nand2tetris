/**
 *  Exclusive-or gate: out = !(a == b).
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    // xor(a,b) = nand(not a, not b) and nand(a, b))
    And(a=nand1, b=nand2, out=out);
    Nand(a=a, b=b, out=nand1);
    Nand(a=nota, b=notb, out=nand2);
    Not(in=a, out=nota);
    Not(in=b, out=notb);
}